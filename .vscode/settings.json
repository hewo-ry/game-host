{
    "editor.formatOnSave": true,
    "eslint.options": {
        "flags": ["unstable_native_nodejs_ts_config"]
    },
    "files.exclude": {
        "**/.next": true,
        "**/.turbo": true,
        "**/.yarn": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/yarn.lock": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    }
}
